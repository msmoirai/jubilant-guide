
public class Conditionals {
	public static void main(String[] args) {
		
		// if (some expression that evalute to true)
		// 	do something
		
		boolean sayHello = false;
		boolean sayHey = true;
	
		//only first statement evaluated to true gets executed
		//if nothing true, nothing prints
		if(sayHello) {
			System.out.println("Hello");
		} else if (sayHey) {
			System.out.println("Hey");
		} else {
			System.out.println("Goodbye");
		}
		
		
		//   >  < >= <= != == relational operator, can use boolean variables
		// (x = 5) assigns 5 to x
		// (x == 5) checks to see if the value of x is 5 - true or false
		
		// and operator &&, or operator ||
		
		int playerX = 50;
		
		if(true && false) {
			System.out.println("AND executed");
		}
		
		// if our player is past the left side of the screen, or is past the right side of the screen
		if(playerX < 0 || playerX > 800) {
			//some code that reverses out player's direction
			System.out.println("OR executed");
		}
		
		
	}
}
