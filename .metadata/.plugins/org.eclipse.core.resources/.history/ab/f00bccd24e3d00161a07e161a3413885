package tutorials.basic;

public class Arrays {
	public static void main(String[] args) {
		//array is a data structure
		int x; //creating on box in memory that stores one int value
		int[] myArray; //declaring an array that will store ints
		myArray = new int[4];//initializing array to be capable of holding 4 ints
		
		x = 5;
		
		myArray[0] = x;
		myArray[1] = 3;
		myArray[2] = 0;
		myArray[3] = 1;
		
		System.out.println(myArray[2]);
	}
}
